{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schema.blueabel.org/hcn/HumanCapitalGrowthFund",
    "@context": "https://schema.blueabel.org/hcn",
    "@type": "HumanCapitalGrowthFund",
    "kind": "DecentralizedContract",
    "title": "Human Capital Growth Fund",
    "ns": "hcn",
    "description": "This schema delineates a versatile fund designed for investing in human capital, aiming to nurture and develop workforce talent across diverse industries and geographical regions. It embodies the adaptability to channel investments through digital networks and within organizations, ensuring a broad and impactful reach in enhancing human resource capabilities.",
    "_parentSchema": "https://schema.blueabel.org/hcn/InvestmentFund",
    "validator": {
        "type": "object",
        "properties": {
            "currency": {
                "$ref": "#/definitions/currencyMTS"
            },
            "minimumTicketSize": {
                "type": "number",
                "minimum": 1000
            },
            "displayName": {
                "type": [
                    "string",
                    "null"
                ]
            },
            "lp": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "entity": {
                            "$ref": "#/definitions/entityMemoInput"
                        },
                        "amount": {
                            "type": "number",
                            "minimum": 0
                        }
                    },
                    "required": [
                        "entity",
                        "amount"
                    ]
                }
            },
            "gp": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/hcnEntityMemo"
                }
            },
            "advisor": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/hcnEntityMemo"
                }
            },
            "purpose": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "SCHEMA"
                        ]
                    },
                    "schema": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string",
                                "minLength": 1
                            }
                        },
                        "required": [
                            "id"
                        ],
                        "additionalProperties": false
                    },
                    "thesis": {
                        "type": [
                            "null",
                            "string"
                        ]
                    }
                },
                "required": [
                    "type",
                    "schema"
                ],
                "additionalProperties": false
            },
            "subscription": {
                "type": "object",
                "properties": {
                    "minimumTicketSize": {
                        "type": "number",
                        "minimum": 1000
                    },
                    "access": {
                        "type": "string",
                        "enum": [
                            "PRIVATE",
                            "INVITE",
                            "PUBLIC"
                        ]
                    }
                },
                "required": [
                    "minimumTicketSize",
                    "access"
                ]
            },
            "lifespan": {
                "type": "object",
                "properties": {
                    "start": {
                        "type": "string",
                        "minLength": 1
                    },
                    "duration": {
                        "type": "string",
                        "pattern": "^P(?!$)(?:(\\d+Y)?(\\d+M)?(\\d+D)?)(T(?=\\d)(\\d+H)?(\\d+M)?(\\d+S)?)?$"
                    },
                    "extended": {
                        "type": "boolean"
                    },
                    "endType": {
                        "type": "string",
                        "enum": [
                            "EXACT"
                        ]
                    }
                },
                "required": [
                    "start",
                    "duration",
                    "extended",
                    "endType"
                ],
                "additionalProperties": false
            },
            "allocation": {
                "type": "object",
                "properties": {
                    "instrument": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "GRANT"
                            ]
                        }
                    },
                    "method": {
                        "type": "string",
                        "enum": [
                            "AUTOMATED"
                        ]
                    },
                    "fundeeType": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "Person",
                                "Profile"
                            ]
                        }
                    },
                    "expiration": {
                        "type": "string",
                        "pattern": "^P(?!$)(?:(\\d+Y)?(\\d+M)?(\\d+D)?)(T(?=\\d)(\\d+H)?(\\d+M)?(\\d+S)?)?$"
                    },
                    "distance": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/InvestmentFundAllocationDistanceObject"
                        }
                    },
                    "conditions": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string",
                                "minLength": 1
                            },
                            "description": {
                                "type": [
                                    "null",
                                    "string"
                                ]
                            },
                            "decay": {
                                "type": "boolean"
                            },
                            "decayGracePeriod": {
                                "type": "string",
                                "pattern": "^P(?!$)(?:(\\d+Y)?(\\d+M)?(\\d+D)?)(T(?=\\d)(\\d+H)?(\\d+M)?(\\d+S)?)?$"
                            },
                            "decayPeriod": {
                                "type": "string",
                                "pattern": "^P(?!$)(?:(\\d+Y)?(\\d+M)?(\\d+D)?)(T(?=\\d)(\\d+H)?(\\d+M)?(\\d+S)?)?$"
                            }
                        },
                        "required": [
                            "id",
                            "decay",
                            "decayGracePeriod",
                            "decayPeriod"
                        ],
                        "additionalProperties": false
                    }
                },
                "required": [
                    "instrument",
                    "method",
                    "fundeeType",
                    "expiration",
                    "distance",
                    "conditions"
                ],
                "additionalProperties": false
            },
            "termination": {
                "type": "object",
                "properties": {
                    "proceeds": {
                        "type": "string",
                        "enum": [
                            "FORWARD"
                        ]
                    },
                    "distribution": {
                        "type": [
                            "null",
                            "string"
                        ]
                    }
                },
                "required": [
                    "proceeds"
                ],
                "additionalProperties": false
            }
        },
        "required": [
            "minimumTicketSize",
            "currency",
            "purpose",
            "lifespan",
            "allocation",
            "termination",
            "lp",
            "gp",
            "advisor"
        ],
        "additionalProperties": false,
        "definitions": {
            "entityMemoInput": {
                "type": "object",
                "properties": {
                    "did": {
                        "type": "string",
                        "minLength": 1
                    },
                    "displayName": {
                        "type": "string"
                    }
                },
                "required": [
                    "did"
                ],
                "additionalProperties": false
            },
            "hcnEntityMemo": {
                "type": "object",
                "properties": {
                    "did": {
                        "type": "string",
                        "enum": [
                            "did:web:humancloud.network"
                        ]
                    },
                    "displayName": {
                        "type": "string",
                        "enum": [
                            "The HumanCloud Network"
                        ]
                    }
                }
            },
            "InvestmentFundAllocationDistanceObject": {
                "type": "object",
                "properties": {
                    "boundry": {
                        "type": "string",
                        "minLength": 1
                    },
                    "boundryType": {
                        "type": "string",
                        "enum": [
                            "INTERNAL",
                            "LOCAL",
                            "REGIONAL",
                            "NATIONAL",
                            "INDUSTRY",
                            "NETWORK"
                        ]
                    },
                    "allocationRatio": {
                        "type": "number",
                        "minimum": 0
                    }
                },
                "required": [
                    "boundry",
                    "boundryType",
                    "allocationRatio"
                ]
            },
            "currencyMTS": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "enum": [
                            "MTS"
                        ]
                    },
                    "cc": {
                        "type": "string",
                        "enum": [
                            "MTS"
                        ]
                    },
                    "symbol": {
                        "type": "string",
                        "enum": [
                            "MTS"
                        ]
                    },
                    "name": {
                        "type": "string",
                        "enum": [
                            "Mootos"
                        ]
                    }
                },
                "required": [
                    "id",
                    "cc",
                    "symbol",
                    "name"
                ]
            }
        }
    }
}