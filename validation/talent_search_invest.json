{
    "$id": "https://blueabel.org/api/schema/hcn/talent-search-invest",
    "type": "object",
    "properties": {
        "displayName": {
            "type": "string"
        },
        "capitalCommitment": {
            "type": "number",
            "minimum": 0
        },
        "lp": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/entityMemoInput"
            }
        },
        "gp": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/hcnEntityMemo"
            }
        },
        "advisor": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/hcnEntityMemo"
            }
        },
        "purpose": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "SCHEMA"
                    ]
                },
                "schema": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "ns": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "id",
                        "ns"
                    ],
                    "additionalProperties": false
                },
                "thesis": {
                    "type": [
                        "null",
                        "string"
                    ]
                }
            },
            "required": [
                "type",
                "schema"
            ],
            "additionalProperties": false
        },
        "lifespan": {
            "type": "object",
            "properties": {
                "start": {
                    "type": "string"
                },
                "duration": {
                    "type": "string",
                    "pattern": "^P(?!$)(?:(\\d+Y)?(\\d+M)?(\\d+D)?)(T(?=\\d)(\\d+H)?(\\d+M)?(\\d+S)?)?$"
                },
                "extended": {
                    "type": "boolean"
                },
                "endType": {
                    "type": "string",
                    "enum": [
                        "EXACT"
                    ]
                }
            },
            "required": [
                "start",
                "duration",
                "extended",
                "endType"
            ],
            "additionalProperties": false
        },
        "allocation": {
            "type": "object",
            "properties": {
                "instrument": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "GRANT"
                        ]
                    }
                },
                "method": {
                    "type": "string",
                    "enum": [
                        "AUTOMATED"
                    ]
                },
                "fundeeType": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "Person",
                            "Profile"
                        ]
                    }
                },
                "expiration": {
                    "type": "string",
                    "pattern": "^P(?!$)(?:(\\d+Y)?(\\d+M)?(\\d+D)?)(T(?=\\d)(\\d+H)?(\\d+M)?(\\d+S)?)?$"
                },
                "conditions": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "description": {
                            "type": [
                                "null",
                                "string"
                            ]
                        },
                        "decay": {
                            "type": "boolean"
                        },
                        "decayGracePeriod": {
                            "type": "string",
                            "pattern": "^P(?!$)(?:(\\d+Y)?(\\d+M)?(\\d+D)?)(T(?=\\d)(\\d+H)?(\\d+M)?(\\d+S)?)?$"
                        },
                        "decayPeriod": {
                            "type": "string",
                            "pattern": "^P(?!$)(?:(\\d+Y)?(\\d+M)?(\\d+D)?)(T(?=\\d)(\\d+H)?(\\d+M)?(\\d+S)?)?$"
                        }
                    },
                    "required": [
                        "id",
                        "decay",
                        "decayGracePeriod",
                        "decayPeriod"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "instrument",
                "method",
                "fundeeType",
                "expiration",
                "conditions"
            ],
            "additionalProperties": false
        },
        "termination": {
            "type": "object",
            "properties": {
                "proceeds": {
                    "type": "string",
                    "enum": [
                        "FORWARD"
                    ]
                },
                "distribution": {
                    "type": [
                        "null",
                        "string"
                    ]
                }
            },
            "required": [
                "proceeds"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "purpose",
        "lifespan",
        "allocation",
        "termination",
        "capitalCommitment",
        "lp",
        "gp",
        "advisor"
    ],
    "additionalProperties": true,
    "definitions": {
        "entityMemoInput": {
            "type": "object",
            "properties": {
                "did": {
                    "type": "string"
                },
                "displayName": {
                    "type": "string"
                }
            },
            "required": [
                "did"
            ],
            "additionalProperties": false
        },
        "hcnEntityMemo": {
            "type": "object",
            "properties": {
                "did": {
                    "type": "string",
                    "enum": [
                        "did:web:humancloud.network"
                    ]
                },
                "displayName": {
                    "type": "string",
                    "enum": [
                        "The HumanCloud Network"
                    ]
                }
            }
        }
    }
}